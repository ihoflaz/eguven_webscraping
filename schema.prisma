datasource db {
  provider = "sqlite"
  url      = "file:./e-imza.db"
}

generator client {
  provider = "prisma-client-js"
}

model Esign {
  id            Int       @id @default(autoincrement())
  firstName     String
  lastName      String
  tcno          String
  email         String
  telefon       String
  serino        String
  setYear       String?
  birth         String
  uyruk         String
  birthloc      String
  secword       String
  pazarlamaizni String
  telefonizni   String
  epostaizni    String
  smsizni       String
  teslimatadres String
  teslimatil    String
  teslimatilce  String
  status        String?
  statusDetails String
  message       String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime? @updatedAt
  userId        Int
  user          Users     @relation(fields: [userId], references: [id])
}

model Company {
  id        Int            @id @default(autoincrement())
  name      String
  address   String?
  phone     String?
  email     String?
  formUrl   String?
  active    Boolean        @default(true)
  createdAt DateTime       @default(now())
  updatedAt DateTime?      @updatedAt
  users     Users[]
  RefIds    CompanyRefId[]
}

model Users {
  id             Int              @id @default(autoincrement())
  firstName      String
  lastName       String
  email          String           @unique
  phone          String           @unique
  password       String
  role           String           @default("user")
  createdAt      DateTime         @default(now())
  updatedAt      DateTime?        @updatedAt
  companyId      Int
  company        Company          @relation(fields: [companyId], references: [id])
  esigns         Esign[]
  active         Boolean          @default(true)
  UserPermission UserPermission[]
  RefIds         UserRefId[]
  PasswordReset  PasswordReset?
}

model Permission {
  id          Int              @id @default(autoincrement())
  name        String           @unique
  description String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime?        @updatedAt
  users       UserPermission[]
}

model UserPermission {
  userId       Int
  user         Users      @relation(fields: [userId], references: [id])
  permissionId Int
  permission   Permission @relation(fields: [permissionId], references: [id])
  createdAt    DateTime   @default(now())
  updatedAt    DateTime?  @updatedAt

  @@id([userId, permissionId])
}

model UserRefId {
  id     Int     @id @default(autoincrement())
  refId  String  @unique
  userId Int
  active Boolean @default(true)
  user   Users   @relation(fields: [userId], references: [id])
}

model CompanyRefId {
  id        Int     @id @default(autoincrement())
  refId     String  @unique
  companyId Int
  active    Boolean @default(true)
  company   Company @relation(fields: [companyId], references: [id])
}

model PasswordReset {
  id         Int       @id @default(autoincrement())
  token      String    @unique
  expiryDate DateTime
  userId     Int       @unique
  user       Users     @relation(fields: [userId], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime? @updatedAt
}
